{% extends 'tour_operator/tourOperatorBase.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset("css/pages/tourOperator/home/homePageStyle.css") }}">
    <link rel="stylesheet" href="{{ asset("css/06-components/components-ticket-card.css") }}">
    <link rel="stylesheet" href="{{ asset("css/06-components/components-top-museum-suggestion-card.css") }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="tickets-container o-flex-container col-12 ">
        <div class="text"> <h4>Last reserved tickets</h4></div>
        <div class="tickets-wrapper row col-12 ">

               {% for ticket in tickets %}
               <div class="ticket-container col-10 col-md-6 col-lg-4">
                   <div class="c-ticket-card">
                       <div class="c-ticket-card__image-holder">
                           <img src="{{ asset('images/museums/'~ ticket.schedule.museum.images[0].path) }}" alt="">
                           <h4 class="c-ticket-card__name">{{ ticket.schedule.museum.museumName }}</h4>
                       </div>
                       <div class="c-ticket-card__date">
                           <h5>Date: {{ ticket.reservedDate| date('d-m-Y') }}</h5>
                       </div>
                       <div class="c-ticket-card__information">
                           <h5>Hour: {{ ticket.schedule.startTime |date('H:i') }} - {{ ticket.schedule.endTime|date('H:i') }}</h5>

                       </div>
                       <div class="c-ticket-card__information">
                           <h5>{{ticket.number }}  bought tickets </h5>

                       </div>
                       <div class="c-ticket-card__information">
                           <h5>Price: {{ ticket.number * ticket.schedule.price }}lv </h5>

                       </div>
                       <div class="c-ticket-card__event-holder">
                           <button>
                               <h6>Cancellation </h6>
                           </button>

                       </div>
                   </div>
               </div>
               {% endfor %}



        </div>


    </div>

    <div class="top-museum-container">

       <div class="text">
           <h4>Top museums in Bulgaria</h4>
       </div>
        {% for museum in topMuseums %}
            <div class="c-top-museum-suggestion-card ">
                <div class="c-top-museum-suggestion-card__image-holder">
                    <img src="{{ asset('images/museums/'~museum.images[0].path) }}" alt="">
                </div>
                <div class="c-top-museum-suggestion-card__information-container">

                    <div class="c-top-museum-suggestion-card__information-container__museumName">
                        <h2>{{museum.museumName}}</h2>
                    </div>
                    <div class="c-top-museum-suggestion-card__information-container__presentation">
                        <h5>{{ museum.additionalInformation }}</h5>
                    </div>
                    <div class="stars">
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>

                    </div>
                </div>

            </div>
        {% endfor %}


    </div>






{% endblock %}