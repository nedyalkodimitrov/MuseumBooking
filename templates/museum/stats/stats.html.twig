{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset("css/06-components/components-stats-museum-review.css") }}">



{% endblock %}

{% block body %}

    <div class="col-12 justify-content-center row">
        <h3 class="col-12 text-center">Reviews</h3>
        <div class="col-12 row">
            {% for review in reviews %}
                <div class="col-12 col-md-6 c-stats-museum-review">
                   <div class=" c-stats-museum-review__image">
                       <img src="{{asset("images/user-profile-image.jpg") }}" alt="">
                   </div>
                    <div class=" c-stats-museum-review__user">{{ review.tourOperator.Name }} {{ review.tourOperator.FName }}</div>
                    <div class=" c-stats-museum-review__text">{{ review.text }}</div>
                    <div class=" c-stats-museum-review__date">Date: {{ review.date | date("m/d/Y") }}</div>
                    <div class=" c-stats-museum-review__rating">Rating: {{ review.rating }}</div>

                </div>
            {% endfor %}
        </div>

    </div>


    {% block javascript %}

    {% endblock %}


{% endblock %}
